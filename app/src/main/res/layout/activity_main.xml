<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCount"
        app:layout_constraintStart_toStartOf="@+id/btnCount"
        app:layout_constraintTop_toBottomOf="@+id/btnDownloadUserData"
        tools:text="Count" />

    <Button
        android:id="@+id/btnDownloadUserData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="51dp"
        android:text="DownLoad User Data"
        app:layout_constraintBottom_toTopOf="@+id/tvCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCount"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginBottom="257dp"
        android:text="Add Count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCount" />


</androidx.constraintlayout.widget.ConstraintLayout>